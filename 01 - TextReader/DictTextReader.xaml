<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib">
<!--
    Чтобы не менять логику работы вызова команд, оставил в перечислении TextBlock
    -->
    <col:ArrayList x:Key="Font">
        <TextBlock Text="Arial"/>
        <TextBlock Text="Times New Roman"/>
        <TextBlock Text="Verdana"/>
    </col:ArrayList>

    <col:ArrayList x:Key="SizeFont">
        <TextBlock Text="10"/>
        <TextBlock Text="12"/>
        <TextBlock Text="14"/>
        <TextBlock Text="16"/>
        <TextBlock Text="18"/>
        <TextBlock Text="20"/>
        <TextBlock Text="24"/>
    </col:ArrayList>

</ResourceDictionary>